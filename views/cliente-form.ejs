<!-- views/cliente-form.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulário de Cliente</title>
</head>
<body>
  <h1>Formulário de Cliente</h1>
  <form action="/clientes/<%= cliente.id ? 'editar/' + cliente.id : 'novo' %>" method="POST">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="<%= cliente.nome %>">
    <br>
    <label for="email">E-mail:</label>
    <input type="email" id="email" name="email" value="<%= cliente.email %>">
    <br>
    <label for="telefone">Telefone:</label>
    <input type="text" id="telefone" name="telefone" value="<%= cliente.telefone %>">
    <br>
    <button type="submit">Salvar</button>
  </form>
</body>
</html>
